{% extends "base.html" %}

{% block page_title %}
Repositories I interacted with
{% endblock %}

{% block white_bg %}

<div class="contents">
  <table>
    <tr>
      <th style="width: 20%">Repository</th>
      <th>Tasks</th>
    </tr>

  {% for repo in repository %}
    <tr>
      <td><a href="{{ repo.link }}">{{ repo.name }}</a></th>
      <td>
      {% set m_tasks = repo.tasks.split(',') %}
      {% for curtask in m_tasks %}
      <div class="task">
        <a href="../{{ curtask }}">{{ curtask }}</a>
      </div>
      {% endfor %}
      </td>
    </tr>
  {% endfor %}{# for repo in repository #}
  </table>
</div>
{% endblock %}
